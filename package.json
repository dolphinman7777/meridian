{
  "name": "meridian-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Meridian Protocol - Staked-access protocol for x402 payments",
  "repository": "https://github.com/meridian-protocol/meridian",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=@meridian/frontend",
    "dev:frontend:turbo": "pnpm --filter=@meridian/frontend dev:turbo",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.5",
    "turbo": "^2.5.5",
    "@types/node": "^22",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}